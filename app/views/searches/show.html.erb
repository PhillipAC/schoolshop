<p id="notice"><%= notice %></p>

<% if @search.orders.empty? %> 
  There are no orders that fit the search
<% else %>
  <% unless @search.condese == TRUE %>
    The searches are below
    <% @search.orders.each do |order| %>
      <%= render 'shared/completedOrder', :order => order %>
    <% end %>  
  <% else %>
    <%= render 'shared/condenseOrder', :orders => @search.orders %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_search_path(@search) %> |
<%= link_to 'Back', searches_path %>
