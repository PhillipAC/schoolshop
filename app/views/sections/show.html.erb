<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @section.name %>
</p>

<p>
  <strong>Start Time:</strong>
  <%= @section.startTime %>
</p>

<%= form_tag section_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search Teacher" %>
<% end %>

<h1><%= @section.name %>'s Orders</h1>

<table>
  <thead>
    <tr>
      <th>Costumer</th>
      <th>Date</th>
      <th>Period</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.name %></td>
        <td><%= order.orderDate.strftime('%m/%d/%Y') %></td>
        <td><%= order.section.name %></td>
        <td><%= order.teacher.name_and_number %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_section_path(@section) %> |
<%= link_to 'Back', sections_path %>
