<%= form_tag orders_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search Users", :name => nil %>
<% end %>

<h2>User List</h2>
<br>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Costumer</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        </tr>
    <% end %>
  </tbody>
</table>